<%- include ./components/header %>
<div class="container-fluid text-center  py-5" >
   <div class="row">
       
       <div class="col-md-10">
            <h1><%=  userInfo.username %></h1>
            <div>
            <img src="/images/<%= userInfo.image  %>" id="homeImg" width="200" height="200">
            <p>
                <a href="/profile/<%=  userInfo._id %>">Profile</a>
            </p>      
     
          </div>
      </div>
      <div class="col-md-2 pt-3" id="friendRequestContianer">
        <h6>Friend Request</h6>
        <%  for(let user of  friendRequests){ %>
            <section class="m-3" >
                <p><img src="/images/<%= user.image  %>" width="50" height="50">
                <%= user.username %></p>
                <p  class='<%=  user._id %>'>
                    <button id="<%=  user._id %>" class="btn btn-primary m-1 confirmButton">Confirm</button>
                    <button id="<%=  user._id %>"  class="btn btn-primary m-1">Cancel</button>
                </p>
            </section>
           
    
        <% } %>  
       </div>
       
    </div>
  </div>
   
    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-md-2" id="nonFriendUsersContainer">
                <h6>Friends</h6>
                <% for(let oneUser of  nonFriendUsers){ %>
                    <section >
                        <p><img src="/images/<%=oneUser.image  %>" width="50" height="50">
                        <%= oneUser .username %></p>
                        <p class='nf<%=oneUser._id  %>'>
                            <button class="btn btn-primary m-3 addFriendButton">Add Friend</button>
                            <a href="/profile/<%=oneUser._id %>" ><button class="btn btn-primary m-3">View Profile</button></a>
                        </p>
                    </section>
                   
            
                <% } %>
    
            </div>
            <div class="col-md-8" id="myPost">
                <h6>Posts</h6>
                <form action="" id="postForm">
                    <textarea name="" id="" cols="30" rows="4" class="form-controller">
     
                    </textarea>
                    <input type="hidden" value="<%=  userInfo._id %>" name="userId">
                    <input type="hidden" value="<%=  userInfo.username %>" name="username">
                    <p>
                       <input type="submit" value="Add post"> 
                    </p>
                    
                </form>
     
                
                     
                     
               
               
     
                </textarea>
                <main id="postsContainer">

                    <% posts.forEach(post=>{ %>
                    <section id='<%= post._id %>' class="mb-5" >   
                        <p class="display-4"><%= post.post %></p>
                        <h1><img src="/images/<%= post.author.image  %>" id="homeImg" width="50" height="50">
                        <%= post.author.username %></h1>
                        <p><%= post.updatedAt %></p>
                       </section>    
                     <% }) %>
                </main>
         
            </div>
            <div class="col-md-2 bg-dark text-white" >

                <h6>Onlines User</h6>
                <section id="private_messages_block" ></section>
                <main id="onlinesContainer">
                      <% for(let oneUser of  onlineUsers){ %>
                <section class="onlineUser" id="<%=oneUser._id  %>">
                        <img src="/images/<%=oneUser.image  %>" class="onlineUserImage">
                        <img src="/images/circle.gif"  class="onlineUserIcon">
                        <span><%= oneUser .username %></span> 
                   </section>
                   
            
                <% } %>
                </main>
              
            </div>
        </div>
    </div>

    <%- include ./components/footer %>
